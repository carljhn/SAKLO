<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="15dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_marginStart="7dp"
            android:layout_height="120dp"
            android:src="@drawable/card_drugs"
            android:background="@drawable/rectangle_light_blu"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:id="@+id/recyclerImage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/recyclerImage"
            android:orientation="vertical"
            android:layout_marginStart="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerNameGeneric"
                android:textSize="18sp"
                android:textColor="@color/dark_blu"
                android:text="Generic Name"
                android:fontFamily="@font/inter_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerNameBrand"
                android:textSize="14sp"
                android:fontFamily="@font/inter_font"
                android:textStyle="italic"
                android:text="Brand Name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerCategory"
                android:textSize="12sp"
                android:fontFamily="@font/inter_font"
                android:text="Category"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>